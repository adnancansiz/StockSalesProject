@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-6">
    <form method="post">
        <div class="form-group">
            <label>Ürün Adı</label>
            <input type="text" name="ProductName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Ürün Fiyat</label>
            <input type="text" name="UnitPrice" class="form-control" />
        </div>
        <div class="form-group">
            <label>Stok Miktarı</label>
            <input type="text" name="Stock" class="form-control" />
        </div>
        <div class="form-group">
            <label>Kategori</label>
            <select name="CategoryId">
                @foreach (Category categories in ViewBag.Category)
                {
                    <option value="@categories.CategoryId">@categories.CategoryName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Tedarikçi</label>
            <select name="SupplierId">
                @foreach (Supplier supplier in ViewBag.Supplier)
                {
                    <option value="@supplier.SupplierId">@supplier.SupplierCompanyName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Gönderilecek Depo</label>
            <select name="StoreroomId">
                @foreach (Storeroom storeroom in ViewBag.Storeroom)
                {
                    <option value="@storeroom.StoreroomId">@storeroom.StoreroomName</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
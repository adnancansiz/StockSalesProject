@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/Css/Login.css" rel="stylesheet" />
</head>
<body>
    <div id="login">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <form class="box" id="login-form" method="post">
                            <h1>Giriş Yap</h1>
                            <p class="text-muted">Lütfen Kullanıcı Adı ve Şifrenizi Girin!</p>
                            <div class="form-group">
                                <input type="text" name="username" id="username" class="form-control" placeholder="Kullanıcı Adı">
                            </div>
                            <div class="form-group">
                                <input type="text" name="password" id="password" class="form-control" placeholder="Şifre">
                            </div>
                            <a class="forgot text-muted" href="#">Şifrenizimi Unuttunuz?</a>
                            <div class="form-group">
                                <input type="submit" name="submit" value="Giriş Yap" href="#">
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>